{
  "extends": ["config:base"],
  "dependencyDashboard": true,
  "stabilityDays": 3,
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "packageRules": [
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint",
      "extends": ["schedule:monthly"]
    },
    {
      "packagePatterns": ["theme-ui"],
      "groupName": "theme-ui"
    },
    {
      "packagePatterns": ["@storybook"],
      "groupName": "storybook",
      "extends": ["schedule:monthly"]
    }
  ]
}
