{
  "extends": ["config:base"],
  "automerge": true,
  "packageRules": [
    {
      "packagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "packagePatterns": ["gatsby"],
      "groupName": "gatsby"
    },
    {
      "packagePatterns": ["@storybook"],
      "groupName": "storybook"
    },
    {
      "packagePatterns": ["core-js"],
      "groupName": "core-js",
      "automerge": false
    }
  ]
}
