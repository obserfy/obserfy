{
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "apps/vor/*"
    ]
  },
  "devDependencies": {
    "@types/react-dom": "^18",
    "eslint": "8.31.0",
    "husky": "8.0.3",
    "lint-staged": "13.1.0",
    "turbo": "^1.6.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": "prettier --write",
